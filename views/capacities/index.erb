<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="card-title mb-0">Capacities</h2>
      <a href="/capacities/new" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>
        New Capacity
      </a>
    </div>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Period Start</th>
            <th>Period Type</th>
            <th>Gross Capacity</th>
            <th>Planned Leaves</th>
            <th>Unplanned Leaves</th>
            <th>Net Capacity</th>
            <th>Source</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @capacities.each do |capacity| %>
            <tr>
              <td><%= capacity.period_start %></td>
              <td><%= capacity.period_type %></td>
              <td><%= capacity.gross_capacity %></td>
              <td><%= capacity.planned_leaves %></td>
              <td><%= capacity.unplanned_leaves %></td>
              <td><%= capacity.net_capacity %></td>
              <td><%= capacity.source %></td>
              <td>
                <div class="d-flex justify-content-end gap-2">
                  <a href="/capacities/<%= capacity.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/capacities/<%= capacity.id %>/edit" class="btn btn-sm btn-outline-warning">
                    <i class="fas fa-edit"></i>
                  </a>
                  <form action="/capacities/<%= capacity.id %>" method="post" class="d-inline">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 