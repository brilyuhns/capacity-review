<% if @project.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mb-3">
  <label for="name" class="form-label">Name</label>
  <input type="text" class="form-control" id="name" name="project[name]" value="<%= @project.name %>" required>
</div>

<div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select class="form-select" id="category" name="project[category]" required>
    <option value="">Select a category</option>
    <option value="Internal" <%= 'selected' if @project.category == 'Internal' %>>Internal</option>
    <option value="External" <%= 'selected' if @project.category == 'External' %>>External</option>
  </select>
</div>

<div class="mb-3">
  <label for="start_date" class="form-label">Start Date</label>
  <input type="date" class="form-control" id="start_date" name="project[start_date]" value="<%= @project.start_date %>" required>
</div>

<div class="mb-3">
  <label for="end_date" class="form-label">End Date</label>
  <input type="date" class="form-control" id="end_date" name="project[end_date]" value="<%= @project.end_date %>" required>
</div>

<div class="d-flex justify-content-end gap-2">
  <a href="/projects" class="btn btn-light">Cancel</a>
  <button type="submit" class="btn btn-primary">Save Project</button>
</div> 