<% if @project.errors.any? %>
  <div class="notification is-danger">
    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <label class="label">Name</label>
  <div class="control">
    <input class="input" type="text" name="project[name]" value="<%= @project.name %>" required>
  </div>
</div>

<div class="field">
  <label class="label">Category</label>
  <div class="control">
    <input class="input" type="text" name="project[category]" value="<%= @project.category %>" required>
  </div>
</div>

<div class="field">
  <label class="label">Start Date</label>
  <div class="control">
    <input class="input" type="date" name="project[start_date]" value="<%= @project.start_date %>">
  </div>
</div>

<div class="field">
  <label class="label">End Date</label>
  <div class="control">
    <input class="input" type="date" name="project[end_date]" value="<%= @project.end_date %>">
  </div>
</div>

<div class="field">
  <div class="control">
    <button type="submit" class="button is-primary">Save Project</button>
  </div>
</div> 