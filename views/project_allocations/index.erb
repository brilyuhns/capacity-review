<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="card-title mb-0">Project Allocations</h2>
      <a href="/project_allocations/new" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>
        New Project Allocation
      </a>
    </div>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Project</th>
            <th>Period Start</th>
            <th>Period Type</th>
            <th>Allocation</th>
            <th>Source</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @project_allocations.each do |allocation| %>
            <tr>
              <td><%= allocation.project.name %></td>
              <td><%= allocation.period_start %></td>
              <td><%= allocation.period_type %></td>
              <td><%= allocation.allocation %></td>
              <td><%= allocation.source %></td>
              <td>
                <div class="d-flex justify-content-end gap-2">
                  <a href="/project_allocations/<%= allocation.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/project_allocations/<%= allocation.id %>/edit" class="btn btn-sm btn-outline-warning">
                    <i class="fas fa-edit"></i>
                  </a>
                  <form action="/project_allocations/<%= allocation.id %>" method="post" class="d-inline">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 